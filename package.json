{
  "name": "picluster-api",
  "version": "1.0.0",
  "description": "Repository of the API that aims at piloting the the Raspberry Pi cluster.",
  "main": "src/server.js",
  "scripts": {
    "lint": "eslint . --ext .js,.json",
    "clean": "rimraf dist",
    "build": "babel src --out-dir dist",
    "public": "make-dir dist/public && cpy src/public/ dist/public",
    "copy": "cpy .env dist",
    "start": "cross-env NODE_ENV=development npm-run-all development",
    "serve": "cross-env NODE_ENV=production npm-run-all clean build copy production",
    "development": "nodemon src/bin/www --exec babel-node --presets @babel/preset-env",
    "production": "node dist/bin/www"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlorentinTh/PiCluster-API.git"
  },
  "author": "FlorentinTh",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/FlorentinTh/PiCluster-API/issues"
  },
  "homepage": "https://github.com/FlorentinTh/PiCluster-API#readme",
  "engines": {
    "node": "10.x"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "helmet": "^3.22.0",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.9",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "spdy": "^4.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-regenerator": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/runtime": "^7.9.2",
    "babel-eslint": "^10.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "cpy-cli": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "make-dir-cli": "^2.0.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2"
  }
}
