{
	"name": "picluster-api",
	"version": "1.0.0",
	"description": "Repository of the API that aims at piloting the the Raspberry Pi cluster.",
	"main": "src/server.js",
	"scripts": {
		"lint": "eslint . --ext .js,.json",
		"clean": "rimraf dist",
		"build": "babel src --out-dir dist",
		"copy": "make-dir dist/public && cpy src/public/ dist/public && cpy .env dist",
		"start": "cross-env NODE_ENV=development npm-run-all development",
		"serve": "cross-env NODE_ENV=development npm-run-all clean build copy production",
		"development": "nodemon src/bin/www.js --exec babel-node --presets @babel/preset-env",
		"production": "node dist/bin/www.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/FlorentinTh/PiCluster-API.git"
	},
	"author": "FlorentinTh",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/FlorentinTh/PiCluster-API/issues"
	},
	"homepage": "https://github.com/FlorentinTh/PiCluster-API#readme",
	"dependencies": {
		"@hapi/joi": "^17.1.0",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.4",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-validator": "^6.4.0",
		"helmet": "^3.21.3",
		"http-status": "^1.4.2",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.9.2",
		"morgan": "^1.9.1",
		"passport": "^0.4.1",
		"passport-local": "^1.0.0",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.4",
		"@babel/node": "^7.8.4",
		"@babel/plugin-transform-regenerator": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.8.3",
		"@babel/preset-env": "^7.8.4",
		"@babel/runtime": "^7.8.4",
		"babel-eslint": "^10.1.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"cpy-cli": "^3.1.0",
		"cross-env": "^7.0.0",
		"eslint": "^6.8.0",
		"eslint-config-env": "^13.0.3",
		"eslint-import-resolver-babel-module": "^5.1.2",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-json": "^2.1.0",
		"eslint-plugin-node": "^11.0.0",
		"make-dir-cli": "^2.0.0",
		"nodemon": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2"
	}
}
