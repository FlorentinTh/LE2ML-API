{
  "paths": {
    "/register": {
      "put": {
        "tags": [
          "Authentication"
        ],
        "summary": "new user registration",
        "requestBody": {
          "description": "Create a new user in database",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "lastname",
                  "firstname",
                  "email",
                  "password",
                  "passwordConfirm"
                ],
                "properties": {
                  "lasname": {
                    "type": "string"
                  },
                  "firstname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "email"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8
                  },
                  "passwordConfirm": {
                    "type": "string",
                    "minLength": 8
                  }
                },
                "example" : {
                  "lastname": "john",
                  "firstname": "doe",
                  "email": "john.doe@email.com",
                  "password": "P@s$w0rD",
                  "passwordConfirm": "P@s$w0rD"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "**Created**",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "$ref": "#/definitions/Message"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "**Unprocessable:** one or more inputs are not valid."
          },
          "500": {
            "description": "**Internal Server Error:** server encountered an issue due to password encryption or either database or file system operations."
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "user login",
        "requestBody": {
          "description": "Send a given user credentials",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "email"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8
                  }
                },
                "example" : {
                  "email": "john.doe@email.com",
                  "password": "P@s$w0rD"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "type": "object",
                          "properties": {
                            "token": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    },
                    "message": {
                      "$ref": "#/definitions/Message"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "**Unauthorized:** user does not exist or wrong credentials have been provided."
          },
          "422": {
            "description": "**Unprocessable:** one or more inputs are not valid."
          },
          "500": {
            "description": "**Internal Server Error:** server encountered an issue due to database operation."
          }
        }
      }
    }
  }
}
