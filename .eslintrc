{
	"extends": [
		"env",
		"eslint:recommended",
		"plugin:node/recommended",
		"plugin:json/recommended"
	],
	"env": {
		"node": true
	},
	"parserOptions": {
		"parser": "babel-eslint",
		"sourceType": "module",
		"ecmaVersion": 2020
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"arrow-parens": [
			"error",
			"always"
		],
		"brace-style": [
			"error",
			"stroustrup"
		],
		"space-before-blocks": [
			"error",
			"always"
		]
	},
	"settings": {
		"import/resolver": {
			"babel-module": {}
		}
	}
}
